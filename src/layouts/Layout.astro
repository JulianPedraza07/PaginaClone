---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-slate-100">
		<div class="bg-white h-16 flex items-center">
			<header class="flex justify-between container max-w-6xl mx-auto">
				<h1>
					<span class="font-bold text-blue-600">H.</span>
					<span>Phone</span>
				</h1>
				<menu>
					<ul class="space-x-5">
						<li class="inline">
							<a
								href="#"
								class="text-blue-600 border-b-2 border-blue-600 border-dotted"
								>Home</a
							>
						</li>
						<li class="inline"><a href="#">Shop</a></li>
						<li class="inline"><a href="#">Product</a></li>
						<li class="inline"><a href="#">Blog</a></li>
						<li class="inline"><a href="#">Contact</a></li>
					</ul>
				</menu>
				<div class="flex space-x-4">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="1em"
						height="1em"
						viewBox="0 0 48 48"
						><g fill="none"
							><path d="M39 32H13L8 12h36z"></path><path
								stroke="currentColor"
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="4"
								d="M3 6h3.5L8 12m0 0l5 20h26l5-20z"
							></path><circle
								cx="13"
								cy="39"
								r="3"
								stroke="currentColor"
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="4"></circle><circle
								cx="39"
								cy="39"
								r="3"
								stroke="currentColor"
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="4"></circle></g
						></svg
					>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="1em"
						height="1em"
						viewBox="0 0 24 24"
						><path
							fill="currentColor"
							d="M15.5 14h-.79l-.28-.27A6.47 6.47 0 0 0 16 9.5A6.5 6.5 0 1 0 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5S14 7.01 14 9.5S11.99 14 9.5 14"
						></path>
					</svg>

					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="1em"
						height="1em"
						viewBox="0 0 24 24"
						><path
							fill="currentColor"
							d="M12 4a4 4 0 0 1 4 4a4 4 0 0 1-4 4a4 4 0 0 1-4-4a4 4 0 0 1 4-4m0 2a2 2 0 0 0-2 2a2 2 0 0 0 2 2a2 2 0 0 0 2-2a2 2 0 0 0-2-2m0 7c2.67 0 8 1.33 8 4v3H4v-3c0-2.67 5.33-4 8-4m0 1.9c-2.97 0-6.1 1.46-6.1 2.1v1.1h12.2V17c0-.64-3.13-2.1-6.1-2.1"
						></path>
					</svg>
				</div>
			</header>
		</div>
		<div
			class="bg-white p-5 rounded-xl shadow-md shadow-slate-200 mt-6 max-w-6xl container mx-auto"
		>
			<div class="grid grid-cols-2 mt-10">
				<div
					class="h-64 w-64 bg-[url('https://as-images.apple.com/is/MME73_AV2?wid=1000&hei=1000&fmt=jpeg&qlt=95&.v=1632861338000')] bg-[length:140%_140%] bg-center mx-auto"
				>
				</div>
				<div>
					<span
						class="font-semibold text-sm bg-slate-400 rounded-full px-3 py-1"
						>New</span
					>
					<h1 class="text-3xl font-semibold mt-2">Apple AirPods</h1>
					<span
						class="bg-gradient-to-r from-blue-600 to-blue-400 text-white py-1 px-3 rounded-lg mt-4 inline-block"
						>3rd Generation</span
					>
					<div class="flex mt-6 text-sm text-gray-600">
						<span
							class="bg-blue-50 w-3 rounded-full inline-block mr-2"
						></span>
						<p class="w-3/5">
							El siguiente paso en la evolución del sonido, la
							comodidad y el control de ruido.
						</p>
					</div>
				</div>
			</div>
			<div class="shadow-md shadow-slate-100 h-12 flex justify-between items-center px-6">
				<div class="text-sm text-gray-400">
					<span class="text-blue-600 font-semibold"
						>Wireless Earbuds</span
					> with Lightning Charging Case. Spatial Audio
				</div>
				<div class=" flex space-x-2">
					<div class=" bg-gray-100 p-1 rounded">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="1.5em"
							height="1.5em"
							viewBox="0 0 20 20"
							><path
								fill="currentColor"
								d="M7.05 9.293L6.343 10L12 15.657l1.414-1.414L9.172 10l4.242-4.243L12 4.343z"
							></path>
						</svg>
					</div>
					<div class=" bg-gray-100 p-1 rounded">	
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="1.5em"
							height="1.5em"
							viewBox="0 0 20 20"
							><path
								fill="currentColor"
								d="m12.95 10.707l.707-.707L8 4.343L6.586 5.757L10.828 10l-4.242 4.243L8 15.657z"
							></path>
						</svg>
					</div>
				</div>
			</div>	
		</div>
		<div class=" mt-12 container max-w-6xl mx-auto grid grid-cols-4 gap-6">
			<div class=" bg-white shadow-sm shadow-slate-200 rounded-lg p-4 ">
				<div class=" h-48 w-48 mx-auto bg-[url('https://m.media-amazon.com/images/I/61WnTqb1MrL.jpg')] bg-center bg-[length:100%_100%]"></div>
				<p class=" text-blue-600 font-semibold bg-slate-100 text-center pt-1 rounded-lg">Texto</p>
			</div>
			<div class=" bg-white shadow-sm shadow-slate-200 rounded-lg p-4 ">
				<div class=" h-48 w-48 mx-auto bg-[url('https://tiendasishop.com/media/catalog/product/m/v/mv7n2lz_a_1.jpg')] bg-center bg-[length:100%_100%]"></div>
				<p class=" text-blue-600 font-semibold bg-slate-100 text-center pt-1 rounded-lg">Texto</p>
			</div>
			<div class=" bg-white shadow-sm shadow-slate-200 rounded-lg p-4 ">
				<div class=" h-48 w-48 mx-auto bg-[url('https://store.storeimages.cdn-apple.com/4668/as-images.apple.com/is/MME73?wid=2000&hei=2000&fmt=jpeg&qlt=95&.v=1632861342000')] bg-center bg-[length:100%_100%]"></div>
				<p class=" text-blue-600 font-semibold bg-slate-100 text-center pt-1 rounded-lg">Texto</p>
			</div>
			<div class=" bg-white shadow-sm shadow-slate-200 rounded-lg p-4 ">
				<div class=" h-48 w-48 mx-auto bg-[url('https://tiendasishop.com/media/catalog/product/m/g/mgyj3am_a.jpg')] bg-center bg-[length:100%_100%]"></div>
				<p class=" text-blue-600 font-semibold bg-slate-100 text-center pt-1 rounded-lg">Texto</p>
			</div>
		</div>
		
		<h1 class=" text-center text-2xl font-semibold mt-12"><span class=" text-blue-600">Newest</span> Product</h1>
		<h3 class=" text-center text-gray-600">Audio Espacial personalizado con seguimiento dinámico de la cabeza</h3>

		<div class=" bg-white h-14 flex items-center mt-10">
			<footer class=" container max-w-6xl mx-auto">
				Apple Inc. 2024
			</footer>
		</div>

		<!-- <slot />  -->
	</body>
</html>
